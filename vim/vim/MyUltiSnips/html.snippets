priority -50

###########################################################################
#                            Reveal   Snippets                            #
###########################################################################

############
# Slides   #
############

snippet slide "Slide" w
<section>
  <h2>${1:Title}</h2>
  <p>
    ${2:Content}
  </p>
</section>
$0
endsnippet

snippet slidel "Slide: List" w
<section>
  <h2>${1:Title}</h2>
  <ul>
    <li>$2</li>
    <li>$3</li>
    <li>$4</li>
  </ul>
</section>
$0
endsnippet

snippet slidei "Slide: Image" w
<section>
  <h2>${1:Title}</h2>
  <img src=$2 />
</section>
$0
endsnippet
# vim:ft=snippets:
